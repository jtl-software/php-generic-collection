{
    "name": "jtl/php-generic-collection",
    "description": "An implementation of a generic collection for PHP",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "8.0.*|8.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "JTL\\Generic\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JTL\\Generic\\": "testing/"
        }
    },
    "scripts": {
        "phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.neon"
        ],
        "phpcs": [
            "vendor/bin/php-cs-fixer fix --config=./.php-cs-fixer.dist.php"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix --config=./.php-cs-fixer.dist.php -v --dry-run --using-cache=no"
        ]
    }
}
