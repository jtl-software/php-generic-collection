{
    "name": "jtl/php-generic-collection",
    "description": "An implementation of a generic collection for PHP",
    "type": "jtl-library",
    "license": "MIT",
    "require-dev": {
        "php": "^7.4 | ^8.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12",
        "friendsofphp/php-cs-fixer": "^2.19",
        "infection/infection": "^0.25.2",
        "vimeo/psalm": "^4.9"
    },
    "autoload": {
        "psr-4": {
            "JTL\\Generic\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JTL\\Generic\\": "testing/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4.20"
        },
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "composer phpcs",
            "composer phpstan",
            "composer phpunit",
            "composer infection"
        ],
        "infection": [
            "vendor/bin/infection -s -j4"
        ],
        "phpunit": [
            "vendor/bin/phpunit"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.neon"
        ],
        "phpcs": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist -v --dry-run --using-cache=no"
        ]
    }
}
